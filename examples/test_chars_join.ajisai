# CHARS/JOIN ワードのテスト

# ============================================
# CHARS 基本テスト
# ============================================

[ 'hello' ] CHARS PRINT
# 期待: [ 'h' 'e' 'l' 'l' 'o' ]

[ '日本語' ] CHARS PRINT
# 期待: [ '日' '本' '語' ]

[ 'a' ] CHARS PRINT
# 期待: [ 'a' ]

# ============================================
# JOIN 基本テスト
# ============================================

[ 'h' 'e' 'l' 'l' 'o' ] JOIN PRINT
# 期待: [ 'hello' ]

[ 'hel' 'lo' ] JOIN PRINT
# 期待: [ 'hello' ]

[ '日' '本' '語' ] JOIN PRINT
# 期待: [ '日本語' ]

[ 'a' ] JOIN PRINT
# 期待: [ 'a' ]

# ============================================
# 往復変換テスト
# ============================================

[ 'hello' ] CHARS JOIN PRINT
# 期待: [ 'hello' ]

[ '日本語' ] CHARS JOIN PRINT
# 期待: [ '日本語' ]

# ============================================
# 既存ワードとの組み合わせ
# ============================================

# 文字列反転
[ 'hello' ] CHARS REVERSE JOIN PRINT
# 期待: [ 'olleh' ]

# 文字列長
[ 'hello' ] CHARS LENGTH PRINT
# 期待: [ 5 ]

# 部分文字列（先頭3文字）
[ 'hello' ] CHARS [ 3 ] TAKE JOIN PRINT
# 期待: [ 'hel' ]

# 部分文字列（末尾2文字）
[ 'hello' ] CHARS [ -2 ] TAKE JOIN PRINT
# 期待: [ 'lo' ]

# 特定位置の文字
[ 'hello' ] CHARS [ 1 ] GET PRINT
# 期待: [ 'e' ]

# ============================================
# エラーケース（コメントアウト）
# ============================================

# [ '' ] CHARS
# 期待: エラー

# [ 42 ] CHARS
# 期待: エラー

# [ ] JOIN
# 期待: エラー

# [ 'a' 1 'b' ] JOIN
