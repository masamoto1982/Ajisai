# 型変換ワード群のテストケース（STR/NUM/BOOL/NIL/VEC）

# ============================================================================
# STR - 任意の型 → String
# ============================================================================

# 数値 → 文字列
[ 42 ] STR

# 分数 → 文字列
[ 1 ] [ 3 ] / STR

# Boolean → 文字列
[ TRUE ] STR
[ FALSE ] STR

# Nil → 文字列
[ nil ] STR

# ベクトル → 文字列（スペース区切り）
[ [ 1 2 3 ] ] STR
[ [ TRUE FALSE nil ] ] STR

# ============================================================================
# NUM - String/Boolean → Number
# ============================================================================

# 整数文字列 → 数値
[ '42' ] NUM

# 分数文字列 → 数値
[ '1/3' ] NUM

# 小数文字列 → 数値（分数に変換）
[ '3.14' ] NUM

# 科学的記数法
[ '1.5e2' ] NUM

# Boolean → 数値
[ TRUE ] NUM
[ FALSE ] NUM

# ============================================================================
# BOOL - String/Number → Boolean
# ============================================================================

# TRUE/FALSE（大文字）
[ 'TRUE' ] BOOL
[ 'FALSE' ] BOOL

# true/false（小文字）
[ 'true' ] BOOL
[ 'false' ] BOOL

# 混在（大文字小文字無視）
[ 'True' ] BOOL
[ 'False' ] BOOL

# '1'/'0'（文字列）
[ '1' ] BOOL
[ '0' ] BOOL

# '真'/'偽'（日本語）
[ '真' ] BOOL
[ '偽' ] BOOL

# 数値 → Boolean
[ 1 ] BOOL
[ 0 ] BOOL

# ============================================================================
# NIL - String → Nil
# ============================================================================

# nil（小文字）
[ 'nil' ] NIL

# NIL（大文字）
[ 'NIL' ] NIL

# Nil（混在）
[ 'Nil' ] NIL

# ============================================================================
# 組み合わせ例
# ============================================================================

# 数値 → 文字列 → 数値
[ 42 ] STR NUM

# Boolean → 文字列 → Boolean
[ TRUE ] STR BOOL

# 文字列から数値に変換してから文字列化
[ '123' ] NUM STR

# Boolean → 数値 → 文字列
[ TRUE ] NUM STR
[ FALSE ] NUM STR

# 数値 → Boolean → 数値
[ 1 ] BOOL NUM
[ 0 ] BOOL NUM

# 文字列 → Boolean → 数値
[ '真' ] BOOL NUM
[ '偽' ] BOOL NUM

# 文字列連結の例
[ 10 ] [ 20 ] + STR [ ' is the sum' ] CONCAT
